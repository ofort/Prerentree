{% extends "OFortPrerentreeBundle::layout.html.twig" %} {% block title %} Liste des structures - {{ parent() }} {% endblock %} {% block ofortprerentree_body %}
<div class="row"><h3>{{enseignement.nom|e}} <br> <span class="small">(type : enseignement)</span></h3></div>
<div class="row">
	<p><a href="{{ path('o_fort_prerentree_enseignement_modify', {id: enseignement.id}) }}">Modifier</a></p>
	<p><a href="{{ path('o_fort_prerentree_enseignement_del', {id: enseignement.id}) }}">Supprimer</a>
</div>
<div class="row">
	<div class="col-md-6">
		<h3>Détail de l'enseignement</h3>
		<p>Durées en heures</p>
		<table class="table table-striped">
			<tr>
				<td>Nom</td>
				<td>{{enseignement.nom|e}}</td>
			</tr>
			<tr>
				<td>Commentaire</td>
				<td>{{enseignement.commentaire|e}}</td>
			</tr>
			<tr>
				<td>Durée</td>
				<td class="text-right">{{ enseignement.duree }}h</td>
			</tr>
			<tr>
				<td>Dont durée en classe dédoublée</td>
				<td class="text-right">{{ enseignement.dureeDedoublee }}h</td>
			</tr>
			<tr>
				<td>Dont durée en classe détriplée</td>
				<td class="text-right">{{ enseignement.dureeDetriplee }}h</td>
			</tr>
			<tr>
				<td>Durée co-animée</td>
				<td class="text-right">{{ enseignement.dureeCoanimee }}h</td>
			</tr>
			<tr>
				<td>Nombre de disciplines dans la co-animation</td>
				<td class="text-right">{{ enseignement.nbDisciplinesCoanimation }}</td>
			</tr>
		</table>
	</div>
</div>
<div class="row">
	<h4>Total des besoins pour l'enseignement : {{ enseignement.dureeTotale }} heure(s)</h4>
</div>
{% endblock %}