{% extends "OFortPrerentreeBundle::layout.html.twig" %}
{% block title %}
	Barette {{barette.nomCourt|e}} - {{ parent() }}
{% endblock %}
{% block ofortprerentree_body %}
	<h2>{{barette.nom}} <span class="small">Barette</span></h2>
	<div class="row">
		<div class="col-sm-6">
			<div class="alert alert-success" role="alert">
				<a href="{{ path('o_fort_prerentree_barette_modifiy', {'id': barette.id }) }}">Modifier la barette</a>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="alert alert-success" role="alert">
				<a href="{{ path('o_fort_prerentree_barette') }}">Retour à la liste</a>
			</div>
		</div>
		<h3>Détail</h3>
	</div>
	<div class="row">
		<h5 class="well">Durée de la barette : {{ barette.duree|round(2, 'floor')}} heures <a href="{{ path('o_fort_prerentree_repartition_addBarette', {'baretteId': barette.id} )}}">Répartir</a></h5>

		<table class="table table-hover table-condensed ">
			<thead>
				<tr>
					<td class="small">N°</td>
					<td class="small">Divisions</td>
				</tr>
			</thead>
			<tbody>
				<tr><td>essai</td><td>cellule</td></tr>
				{% for div in barette.divisions %}
					<tr>
						<td>{{loop.index}}</td>

						<td><a href="{{ path('o_fort_prerentree_division_view', {'id': div.id}) }}" title='{{ div.nom }}'>{{ div.nomCourt }}</a></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<hr>

{% endblock %}